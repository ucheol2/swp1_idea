<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "이메일" %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "자주쓰는 메일주소" %>
  </div>

  <div class="field">
    <%= f.label :password, "비밀번호" %>
    <% if @minimum_password_length %>
    <em>(최소 <%= @minimum_password_length %> 자)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "비밀번호 확인" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  
  <div class="field">
    <%= f.label :name, "이름" %><br />
    <%= f.text_field :name, placeholder: "성함" %>
  </div>

  <div class="actions">
    <%= f.submit "회원가입" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
